@using WFM.UI.DF.ModelsView
@model Form12BViewModel


@using (Html.BeginForm("SaveOrUpdate", "Report", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id, new { @name = "Id" })
    <div class="row">
        <div class="dashboard-ecommerce">
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- pageheader  -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- end pageheader  -->
                <!-- ============================================================== -->
                <div class="border border-primary bg-actual-white">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 m-b-10">
                        <p>
                            Note - It is mandatory that all legal documents signed with any outside entity should be processed through
                            this form and essentially through Head of Legal with the written authorization of MD/BV. Any deviations
                            are not acceptable to the company and shall amount to intentional noncompliance of Company procedures.
                        </p>
                    </div>
                </div>
                <div class="border border-primary bg-actual-white">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 m-b-10">
                        <form method="POST" class="needs-validation">
                            @*<div class="row form-group">
                                    <div class="col-md-12  tcol" style="background-color: gray;"><h1>Form 12 - Payment Approval Request Form </h1></div>
                                </div>*@
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"><b>1.</b></label>
                                <label class="col-md-3 control-label tcol">Name of requesting party</label>
                                <div class="col-md-8 tcol">
                                    @Html.TextBoxFor(m => m.NameOfRequestingParty, new { @placeholder = "", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"><b>2.</b></label>
                                <label class="col-md-3 control-label tcol"> Division:</label>
                                <!-- <div class="col-md-9"></div> -->
                                <div class="col-md-8 tcol">
                                    @Html.DropDownList("DivisionId", new SelectList(ViewBag.DivisionList, "Id", "Name"), "Select Division", new { @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"><b>3.</b></label>
                                <label class="col-md-3 control-label tcol"> Date of request:</label>
                                <div class="col-md-3 tcol">
                                    @Html.TextBoxFor(m => m.FormDate, new { @class = "form-control", @placeholder = "MM/DD/YYYY", @required = "required" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"><b>4.</b></label>
                                <div class="col-md-11 tcol">
                                    <div class="row form-group">
                                        <label class="col-md-3 control-label tcol">Short description of the reason for payment </label>
                                        <div class="col-md-9 tcol">
                                            @Html.TextBoxFor(m => m.ShortDescriptionOfTheReasonForPayment, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="col-md-3 control-label tcol">Scope of Work requested for Payment release</label>
                                        <div class="col-md-9 tcol">
                                            @Html.TextBoxFor(m => m.ScopeOfWork, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="col-md-3 control-label tcol">Received and Approved Quotation / Proposal etc.</label>
                                        <div class="col-md-9 tcol">
                                            @Html.TextBoxFor(m => m.ReceivedAndApprovedQuotation, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="col-md-3 control-label tcol">Invoice Reference No</label>
                                        <div class="col-md-9 tcol">
                                            @Html.TextBoxFor(m => m.InvoiceReferenceNo, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"><b>5.</b></label>
                                <label class="col-md-3 control-label tcol">Recommendation by Divisional Head</label>
                                <!-- <div class="col-md-9"></div> -->
                                <div class="col-md-8 tcol">
                                    @Html.TextBoxFor(m => m.RecommendationByDivisionalHead, new { @placeholder = "", @class = "form-control", @required = "required" })
                                </div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"><b>10.</b></label>
                                <label class="col-md-11 control-label tcol">Supporting Documents</label>
                            </div>
                            <div class="row form-group">
                                <div class="col-md-1 tcol">
                                </div>
                                <div class="col-md-11 tcol">
                                    <div class="row form-group">
                                        <label class="col-md-4 control-label tcol"> 1. Mail Trail - N/A - </label>
                                        <div class="col-md-8 tcol">
                                            @Html.TextBoxFor(m => m.SDMailTrail, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="col-md-4 control-label tcol">2. Approved Quotation </label>
                                        <div class="col-md-8 tcol">
                                            @Html.TextBoxFor(m => m.SDApprovedQuotation, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="col-md-4 control-label tcol">3. Agreed Scope N/A</label>
                                        <div class="col-md-8 tcol">
                                            @Html.TextBoxFor(m => m.SDAgreedScope, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <label class="col-md-4 control-label tcol">4. Approved and Certified Invoice attached</label>
                                        <div class="col-md-8 tcol">
                                            @Html.TextBoxFor(m => m.ApprovedAndCertifiedInvoiceAttached, new { @placeholder = "", @class = "form-control", @required = "required" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br />
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"></label>
                                <div class="col-md-5 tcol">
                                    <textarea rows="3" class="form-control"></textarea>

                                </div>
                                <div class="col-md-5 tcol"></div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"></label>
                                <label class="col-md-5 control-label tcol">Checked and Approved <br /><i>Name of Requester</i></label>
                                <!-- <div class="col-md-12 tcol"></div> -->
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"></label>
                                <div class="col-md-3 tcol">
                                    <input type="date" class="form-control" />
                                </div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"></label>
                                <div class="col-md-5 tcol">
                                    <textarea rows="3" class="form-control"></textarea>
                                </div>
                                <div class="col-md-5 tcol">
                                    <textarea rows="3" class="form-control"></textarea>
                                </div>
                            </div>
                            <div class="row form-group">
                                <label class="col-md-1 control-label tcol"></label>
                                <label class="col-md-5 control-label tcol">Approved by <br />Managing Director</label>
                                <label class="col-md-5 control-label tcol">Authorised by <br />Head of Fin. And Admin</label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

