@using WFM.UI.DF.ModelsView
@model Form8BViewModel


@using (Html.BeginForm("SaveOrUpdate", "Report", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(m => m.Id, new { @name = "Id" })
    <div class="row">
        <div class="dashboard-ecommerce">
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- pageheader  -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- end pageheader  -->
                <!-- ============================================================== -->
                <div class="border border-primary bg-actual-white">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 m-b-10">
                        <p>
                            Note - It is mandatory that all legal documents signed with any outside entity should be processed through
                            this form and essentially through Head of Legal with the written authorization of MD/BV. Any deviations
                            are not acceptable to the company and shall amount to intentional noncompliance of Company procedures.
                        </p>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Requested by"><b>1.</b>&emsp;Requested by(Full name)</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                <input type="text" class="form-control" />
                                @Html.TextBoxFor(m => m.RequestedBy, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Designation"><b>2.</b>&emsp;Designation</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.DropDownList("DesignationId", new SelectList(ViewBag.DesignationList, "Id", "Name"), "Select Designation", new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Division"><b>3.</b>&emsp;Division</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.DropDownList("DivisionId", new SelectList(ViewBag.DivisionList, "Id", "Name"), "Select Division", new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Reference No/File No"><b>4.</b>&emsp;Reference No/File No</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.ReferenceNo, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Date of Request"><b>5.</b>&emsp;Date of Request</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.DateOfRequest, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Project Sector"><b>6.</b>&emsp;Project Sector.</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.DropDownList("ProjectSectorId", new SelectList(ViewBag.ProjectSectorList, "Id", "Name"), "Select Division", new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-12 control-label" for="Complete accurate description of the Project">
                                <b>7.</b>&emsp;Complete accurate description of the Project<b>:</b>&nbsp;(To be given using the official professional terminology) :
                            </label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(m => m.DescriptionOfTheProject, new { @placeholder = "", @class = "form-control", @required = "required", @rows = 3 })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Total Project Value"><b>8.</b>&emsp;Total Project Value.</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.TotalProjectValue, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-11 control-label" for="The Company engaged"><b>9.</b>&emsp;The Company engaged representing CCC group :</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.CompanyRepresentingCCC, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-12 control-label" for="The role to be played"><b>10.</b>&emsp;The role to be played by our (CCC) company as its obligations which will be the basis for the requested legal draft/ document :</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.RoleToBePlayedByCCC, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-12 control-label" for="Name and Designation"><b>11.</b>&emsp;Name of signatory from CCC side :</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.NameOfSignatoryCCC, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-12 control-label" for="Name and Designation"><b>11.</b>&emsp;Designation of signatory from CCC side :</label>
                            <div class="col-md-12">
                                @Html.TextBoxFor(m => m.DesignationOfSignatoryCCC, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-md-12 control-label" for="Details of the other"><b>12.</b>&emsp;Details of the other outside party involved:</label>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Name">&emsp;&emsp;Name</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.OtherPartyName, new { @placeholder = "", @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Reg No if a company">&emsp;&emsp;Reg No if a company</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.OtherPartyRegNo, new { @placeholder = "", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Registered address">&emsp;&emsp;Registered address</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.OtherPartyAddress, new { @placeholder = "", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-3 control-label" for="Email">&emsp;&emsp;Email</label>
                            <div class="col-md-1"><b>:</b></div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.OtherPartyEmail, new { @placeholder = "", @class = "form-control" })
                            </div>
                        </div>
                        <div class="row form-group">
                            <label class="col-md-12 control-label" for="The “Role” played by the other company"><b>13.</b>&emsp;The “Role” played by the other company and its obligations which will be the basis for the requested legal draft/ document :</label>
                            <div class="col-md-12">
                                @Html.TextAreaFor(m => m.RoleToBePlayedByOtherParty, new { @placeholder = "", @class = "form-control", @required = "required", @rows = 3 })
