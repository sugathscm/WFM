@model WFM.DAL.Contact

@{
    ViewBag.Title = "Contact";
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2-bootstrap-theme/0.1.0-beta.10/select2-bootstrap.min.css" rel="stylesheet" />
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#List').DataTable({
            "paging": true,

            "ajax": {
                "url": "/Contact/GetList",
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "Title" },
                { "data": "Name" },
                { "data": "Mobile" },
                { "data": "Email" },
                { "data": "FixedLine" },
                { "data": "DesignationName" },
                {
                    "data": "IsActive",
                    "render": function (data, type, full, meta) {
                        if (data == true)
                            return 'Yes';
                        else
                            return 'No';
                    }
                },
                {
                    "data": "Id", "searchable": false, "ordering": false,
                    "render": function (data, type, full, meta) {
                        return '<a class="btn btn-info" href="/Contact/Index/' + data + '">Edit</a>';
                    }
                },
            ]
        });
    });
</script>



<div class="dashboard-ecommerce">
    <div class="container-fluid dashboard-content ">
        <!-- ============================================================== -->
        <!-- pageheader  -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">@ViewBag.Title</h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                @*<li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">E-Commerce Dashboard Template</li>*@
                            </ol>
                        </nav>
                    </div>
                </div>
                @if (TempData["Message"] != null)
                {
                    @Html.Raw(TempData["Message"])
                }
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end pageheader  -->
        <!-- ============================================================== -->
        <div class="row" style="background-color:#fff">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm("SaveOrUpdate", "Contact", FormMethod.Post, new { @class = "needs-validation", role = "form" }))
                        {
                            @*<form class="needs-validation" novalidate="">*@
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.Id, new { @name = "Id" })
                            <div class="row">
                                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12 ">
                                    @Html.LabelFor(m => m.Title, new { @class = "control-label" })
                                    @Html.DropDownList("Title", new List<SelectListItem>
                                    {
                                    new SelectListItem{ Text="Mr.", Value = "Mr." },
                                    new SelectListItem{ Text="Ms.", Value = "Ms." },
                                    new SelectListItem{ Text="Mrs.", Value = "Mrs." },
                                    new SelectListItem{ Text="Miss.", Value = "Miss." },
                                    new SelectListItem{ Text="Dr.", Value = "Dr." },
                                    new SelectListItem{ Text="Rev.", Value = "Rev." }
                                    }, "Title", new { @class = "form-control" })
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12 ">
                                    @Html.LabelFor(m => m.Name, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                </div>
                                <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12 mb-2">
                                    @Html.LabelFor(m => m.Designation, new { @class = "control-label" })
                                    @Html.DropDownList("DesignationId", (SelectList)ViewBag.ListObject, "Designation", new { @class = "form-control" })
                                </div>
                            </div>
                            <br/>
                            <div class="form-row">
                                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                    @Html.LabelFor(m => m.Mobile, new { @class = "control-label" })
                                   @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                    @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 col-12 mb-2">
                                    @Html.LabelFor(m => m.FixedLine, new { @class = "control-label" })
                                    @Html.TextBoxFor(m => m.FixedLine, new { @class = "form-control" })
                                </div>
                                
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                                    <div class="form-group">
                                        <div class="form-check">
                                            @Html.CheckBoxFor(m => m.   IsActive, new { @class = "form-check-input", @checked = Model.IsActive })
                                            @Html.LabelFor(m => m.IsActive, new { @class = "col-md-2 control-label" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 ">
                                    <input type="submit" class="btn btn-success" value="Save" />
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <hr />
        <div class="row" style="background-color:#fff">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12 m-t-20">
                <div class="table-responsive">
                    <table id="List" class="table table-striped table-bordered first">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Name</th>
                                <th>Mobile</th>
                                <th>Email</th>
                                <th>Fixed Line</th>
                                <th>Designation</th>
                                <th>Active</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    $('#DesignationId').select2({
        selectOnClose: true
    });

    $('#Title').select2({
        selectOnClose: true
    });
</script>

}
